= form_for @category do |f|
  .form-group{class: ("has-error" if @category.errors[:name].any?)}
    = f.label :name, class: 'control-label'
    = f.text_field :name, class: 'form-control'
    - if @category.errors[:name]
      - @category.errors[:fname].each do |e|
        %span.help-block= e

  .form-group
    = f.submit "Create Category"
