.panel.panel-green
  .panel-heading
    .row
      .col-xs-3
        = icon('money', class: 'fa-5x')
      .col-xs-9.text-right
        .huge
          #{number_to_currency @balance}
        %p
          Total outstanding
.panel.panel-default
  .panel-heading
    %h3 Recent transactions
  .panel-body
    %table.table.table-bordered.table-hover.table-striped
      %thead
        %tr
          %th Customer
          %th Category
          %th Value
      %tbody
        - @recent_transactions.each do |rt|
          %tr
            %td= rt.customer.name
            %td= rt.category_name
            %td= number_to_currency rt.value
