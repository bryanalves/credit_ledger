= form_for @customer do |f|
  %div{class: ("error" if @customer.errors[:first_name].any?)}
    = f.label :first_name
    = f.text_field :first_name
    - if @customer.errors[:first_name]
      - @customer.errors[:first_name].each do |e|
        %small.error= e

  %div{class: ("error" if @customer.errors[:last_name].any?)}
    = f.label :last_name
    = f.text_field :last_name
    - if @customer.errors[:last_name]
      - @customer.errors[:last_name].each do |e|
        %small.error= e

  %div{class: ("error" if @customer.errors[:email].any?)}
    = f.label :email
    = f.email_field :email
    - if @customer.errors[:email]
      - @customer.errors[:email].each do |e|
        %small.error= e

  %div{class: ("error" if @customer.errors[:postal_code].any?)}
    = f.label :postal_code
    = f.text_field :postal_code
    - if @customer.errors[:postal_code]
      - @customer.errors[:postal_code].each do |e|
        %small.error= e

  %div{class: ("error" if @customer.errors[:customer_id].any?)}
    = f.label :customer_id, "Customer ID"
    = f.text_field :customer_id
    - if @customer.errors[:customer_id]
      - @customer.errors[:customer_id].each do |e|
        %small.error= e

  %div
    = f.submit "Create User"
